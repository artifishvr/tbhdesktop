{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../src/dist"
  },
  "package": {
    "productName": "tbh",
    "version": "2.2.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "scope": ["$APPCONFIG", "$APPCONFIG/*"],
        "createDir": true
      }
    },
    "windows": [
      {
        "title": "tbh",
        "width": 700,
        "height": 770
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "lol.arti.tbh",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/artifishvr/tbhdesktop/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZDRUFBRjkwN0RDMTMxQ0IKUldUTE1jRjlrSy9xL0JYaUZqbnFOKzhSNGZZR3RKRmJMbnMyZ0Z5NnpNOTk5dThZUmNZVFRwVmUK"
    }
  }
}
